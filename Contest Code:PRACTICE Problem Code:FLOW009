#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
	cin>>t;
	while(t--)
	{
	    int q,p;
	    double e;
	    cin>>q>>p;
	   
	    if(q>1000)
	    {
	    e=(0.9*q*p);
	     cout<<fixed<<setprecision(6)<<e<<endl;   
	     
	    }
	    else
	    {
	        e=(q*p);
	       cout<<fixed<<setprecision(6)<<e<<endl;   
	    }
	   
	}
	return 0;
}
