#include <bits/stdc++.h>

using namespace std;
void findindex(string str,string pat)
{
    int found=str.find(pat);
    while(found != string:: npos)
    {
        cout<<"pattern found at"<<found<<endl;
        found=str.find(pat,found+1);
    }
}

int main()
{string str ,pat;
    cin>>str>>pat;
    findindex(str,pat);

    return 0;
}
